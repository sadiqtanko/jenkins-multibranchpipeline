pipeline {
  
  agent any
  
  stages {
   
    stage ("build") {
      
      steps {
           echo 'building the application now'        
      }
      
    }
    
    stage ("test") {
      
      steps {        
          echo 'testing the application'
      }
      
    }
    
    stage ("deploy") {
      
      steps {
            echo 'deploying the application with auto build'
      }
      
    }
    
  }
  
}
